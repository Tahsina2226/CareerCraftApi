datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  role      String    @default("user") // admin / user
  blogs     Blog[]
  projects  Project[]
  createdAt DateTime  @default(now())
}

model Blog {
  id        String    @id @default(uuid())
  title     String
  slug      String    @unique
  content   String
  excerpt   String?
  coverUrl  String?
  published Boolean   @default(false)
  authorId  String
  author    User      @relation(fields: [authorId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Project {
  id          String    @id @default(uuid())
  title       String
  description String
  liveUrl     String?
  repoUrl     String?
  thumbnail   String?
  ownerId     String
  owner       User      @relation(fields: [ownerId], references: [id])
  createdAt   DateTime  @default(now())
}
